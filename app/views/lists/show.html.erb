<h1><%= @list.name %></h1>

<% if !@not_done_tasks.nil? %>
  <h4>Here are the uncompleted tasks for this list:</h4>

  <ul>
    <% @not_done_tasks.each do |task| %>
      <li>

        <strong><%= task.description %></strong>

        <%= link_to "Edit", edit_list_task_path(@list, task) %> |
        <%= link_to "Delete", list_task_path(@list, task),
                                 :data => {:confirm => "Are you sure?",
                                                :method => "delete"} %>
      </li>
    <% end %>
  </ul>
<% end %>
<% if !@frogs.nil? %>
  <h4>Here are the completed tasks: </h4>
  <ul>
    <% @frogs.each do |task| %>
      <li>
        <%= task.description %>
        <%= link_to "Edit", edit_list_task_path(@list, task) %> |
        <%= link_to "Delete", list_task_path(@list, task),
                                 :data => {:confirm => "Are you sure?",
                                                :method => "delete"} %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no tasks yet!</p>
<% end %>

<p><%= link_to "Add a task", new_list_task_path(@list) %></p>
<p><%= link_to "Delete List", list_path(@list),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %></p>

<p><%= link_to "Return to lists", lists_path %></p>
